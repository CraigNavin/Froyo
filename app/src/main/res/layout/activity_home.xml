<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mappground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.tees.p4072699.dogmapp.Home">

    <ImageButton
        android:id="@+id/home_btn_help"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/button"
        app:srcCompat="@drawable/house"
        android:scaleType="fitCenter"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/Name_test"
        android:layout_toStartOf="@+id/Name_test" />

    <ImageButton
        android:id="@+id/button_profile"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button"
        app:srcCompat="@drawable/avatar"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/Name_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_revScr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />

    <ImageButton
        android:id="@+id/button_doglist"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/button"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/doggo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/button_reviews"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/edit"
        />

    <ImageButton
        android:id="@+id/button_startwalk"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/button"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/placeholder"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Name_test"
        android:layout_toEndOf="@+id/Name_test"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <ImageButton
        android:id="@+id/imageButton_settings"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/button"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
